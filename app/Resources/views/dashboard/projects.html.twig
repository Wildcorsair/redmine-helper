{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Projects</h2>
                <div id="projects-list">
                    {% for project in projects %}
                        <div class="project-item col-md-12">
                            <div class="project-caption col-md-11">{{ project.name }}</div>
                            <div class="project-manage-link col-md-1">
                                <a href="{{ path('project_details', {'projectId': project.id}) }}">Manage</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}